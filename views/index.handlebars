      <label for="Year">Year</label>
    </div>
    <div class="input-field col s12">
      <input type="text" name="poster">
      <label for="poster">Poster</label>
    </div>
    <input type="submit" value="add movie" class="btn btn-primary btn-block">
  </form>
</div>
